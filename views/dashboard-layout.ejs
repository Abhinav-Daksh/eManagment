<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard-ShowTime</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  <link rel="stylesheet" href="/<%= cssFile %>" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet" />
</head>

<body>
  <div class="d-flex" id="wrapper">
    <div class="bg-dark border-right" id="sidebar-wrapper">
      <div class="sidebar-heading text-white">ShowTime</div>
      <div class="list-group list-group-flush">
        <a href="/dashboard/home" class="list-group-item list-group-item-action bg-dark text-white"><i
            class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/dashboard/AllEvents" class="list-group-item list-group-item-action bg-dark text-white"><i
            class="fas fa-calendar-alt"></i> All Events</a>
        <a href="#" class="list-group-item list-group-item-action bg-dark text-white"><i class="fas fa-chart-line"></i>
          Analytics</a>
        <a href="/dashboard/marketing" class="list-group-item list-group-item-action bg-dark text-white"><i
            class="fas fa-envelope"></i> Marketing</a>
        <a href="/" class="list-group-item list-group-item-action bg-dark text-white">Log Out</a>
      </div>
    </div>
    <%- include('partials/messages') %>
      <%- body %>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js
    "></script>
        <script>
          $(document).ready(function () {
            $("#menu-toggle").click(function (e) {
              e.preventDefault();
              $("#wrapper").toggleClass("toggled");
            });

            $(document).click(function (e) {
              const target = $(e.target);
              if (
                !target.closest("#sidebar-wrapper").length &&
                !target.closest("#menu-toggle").length
              ) {
                if ($("#wrapper").hasClass("toggled")) {
                  $("#wrapper").removeClass("toggled");
                }
              }
            });
          });
        </script>
</body>

</html>