<div class="head-wrap" style="background-color: #3D87D8;">
    <nav>
        <div class="logo">
            <h1><a href="/"><span>SHOW</span>Time</a></h1>
        </div>
        <div class="search">
            <div class="searchbar">
                <input type="search" id="search" placeholder="Search Shows Near You">
                <i class="fa fa-search"></i>
            </div>
        </div>
        <div class="buttons">
            <a href="/login">Sign In</a>
            <a href="/login/register">Sign Up</a>
        </div>
        <div class="icon-login">
            <a class="fa fa-right-to-bracket" href="/login"></a>
        </div>
    </nav>
</div>
<section class="shows-wrap">
    <h2>All Shows</h2>
    <div class="all-shows">
        <div class="row">
            <% if(T.length > 0){ %>
                <%T.forEach(ticket =>{ %>
                    <div class="col-md-4 mb-4">
                        <div class="card custom-card">
                            <div class="card-body">
                                <h5 class="card-title"><%= ticket.showName %></h5>
                                <p class="card-text">
                                    <%= ticket.showDate.toDateString() %>
                                </p>
                                <p class="card-text"><%= ticket.showCity %></p>
                                <p class="card-text">
                                    â‚¹<%= ticket.price %>
                                </p>
                                <button class="btn btn-success"><a href="#">Buy</a></button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% }else{ %>
                <p>No Shows available.</p>
            <% } %>
            
        </div>
    </div>
</section>
<script>
    let lastScrollTop = 0;  
const navbar = document.querySelector('.head-wrap');  

window.addEventListener('scroll', function() {
    let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

    if (currentScroll > lastScrollTop) {
        
        navbar.style.top = '-150px';  
    } else {
        
        navbar.style.top = '0';
    }

    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; 
});
</script>