<div id="page-content-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container-fluid">
            <button class="btn btn-primary" id="menu-toggle">
                <i class="fa fa-bars"></i>
            </button>
            <h1 class="ml-auto mb-0"><%= E.title %></h1>
        </div>
    </nav>
    
    <div class="container mt-5">
        <div class="row">
            <!-- Event Details -->
            <div class="col-md-6 mb-3">
                <a class="fas fa-trash-alt mb-2 btn btn-danger" style="cursor: pointer;" id="deletE" href="/dashboard/AllEvents/delete/<%= E._id %>"></a><p style="color: darkgray;">Click If you want to delete this event.</p>
                <p><b>Event City:</b> <%= E.city %></p>
                <p><b>Event Venue:</b> <%= E.venue %></p>
                <p><b>Event Date:</b> <%= E.date.toDateString() %></p>
            </div>

            <!-- To-Do List -->
            <div class="col-md-6">
                <h2>To-Do List</h2>
                <form id="todo-form" action="/dashboard/allEvents/task/<%= E._id %>" method="POST">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="todo-input" name="task" placeholder="Add a new task"  required>
                        <div class="input-group-append">
                            <button class="btn btn-primary" type="submit">Add</button>
                        </div>
                    </div>
                </form>
                <ul id="todo-list" class="list-group">
                    <% if(T.length > 0){ %>
                        <% T.forEach(t => { %>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= t.task %>
                                <button class="btn btn-danger btn-sm"><a href="/dashboard/allEvents/del/<%=t._id%>/<%=E._id %>">Delete</a></button>
                            </li>
                        <% }) %>
                    <% }else{ %>
`                       <li class="list-item">No tasks</li>
                     <% } %>
                </ul>
            </div>
        </div>
    </div>
</div>

