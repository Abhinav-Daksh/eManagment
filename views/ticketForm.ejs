<div class="form-container">
    <div class="form-header">Customize Your Ticket</div>
    <div class="form-subtext">Fill in the details below to publish a ticket.</div>
    <form action="/dashboard/marketing" method="POST">
        <div class="form-group">
            <label for="buy-limit">Purchase Limit</label>
            <input type="number" id="buy-limit" name="Limit" placeholder="Enter Purchase Limit." required >
        </div>
        <div class="form-group">
            <label for="Price">Price:(â‚¹)</label>
            <input type="number" id="Price" name="Price" placeholder="Enter Price of the Ticket." required>
        </div>
        <div class="form-group">
            <label for="validity">Ticket valid till Date</label>
            <input type="date" id="validity" name="Validity" required>
            <input type="hidden" name="eventId" value="<%= eventId %>">
            <input type="hidden" name="ShowCity" value = "<%= E.city %>">
            <input type="hidden" name="ShowDate" value = "<%= E.date %>">
            <input type="hidden" name="ShowVenue" value = "<%= E.venue %>">
            <input type="hidden" name="ShowName" value = "<%= E.title %>">          
        </div>
        <button type="submit" class="submit-btn">Submit</button>
    </form>
</div>